<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imagendetalle"
        android:layout_width="175dp"
        android:layout_height="175dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulodetalle"
            android:textSize="20dp"

            app:layout_constraintTop_toBottomOf="@id/imagendetalle"
            app:layout_constraintRight_toRightOf="@id/imagendetalle"
            app:layout_constraintLeft_toLeftOf="@id/imagendetalle"
            android:layout_marginTop="25dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fechadetalle"
            android:textSize="20dp"

            app:layout_constraintTop_toBottomOf="@id/titulodetalle"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/directordetalle"
            android:textSize="20dp"

            app:layout_constraintTop_toBottomOf="@id/fechadetalle"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plotdetalle"
            android:textSize="20dp"

            app:layout_constraintTop_toBottomOf="@id/directordetalle"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duraciondetalle"
            android:textSize="20dp"

            app:layout_constraintTop_toBottomOf="@id/plotdetalle"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>